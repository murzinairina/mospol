#include <iostream>
#include<math.h>
using namespace std;

int main()
{
	setlocale(LC_ALL, "Russian");
	int n;
	cout << "Введите номер задания от 1 до 7: " << "\n";
	cin >> n;
	if (n == 1)
	{
		int a, b;
		cout << "Введите число А: " << "\n";
		cin >> a;
		cout << "Введите число В: " << "\n";
		cin >> b;
		cout << "Проверим, справедливы ли неравенства А>2 и B<=3" << "\n";
		if (a > 2 and b <= 3)
		{
			cout << "Оба неравенства истинны" << "\n";
		}
		else if (a > 2 and b > 3)
		{
			cout << "Истинно только первое неравенство, второе ложно" << "\n";
		}
		else if (a <= 2 and b <= 3)
		{
			cout << "Истинно только второе неравенство, первое ложно" << "\n";
		}
		else if (a <= 2 and b > 3)
		{
			cout << "Оба неравенства ложны" << "\n";
		}
	}
	else if (n == 2)
	{
		int a, b, c;
		cout << "Введите число А: " << "\n";
		cin >> a;
		cout << "Введите число В: " << "\n";
		cin >> b;
		cout << "Введите число C: " << "\n";
		cin >> c;
		cout << "Проверим, справедливо ли неравенство А<B<C" << "\n";
		if (a < b and b < c)
		{
			cout << "Неравенство истинно" << "\n";
		}
		else
		{
			cout << "Неравенство ложно" << "\n";
		}
	}
	else if (n == 3)
	{
		int a;
		cout << "Введите число А: " << "\n";
		cin >> a;
		if (a > 9 and a < 100 and a % 2 == 0)
		{
			cout << "A - двузначное четное число" << "\n";
		}
		else
		{
			cout << "Высказывание 'A - двузначное четное число' ложно" << "\n";
		}
	}
	else if (n == 4)
	{
		int a, a1, a2, a3;
		cout << "Введите трехзначное число А: " << "\n";
		cin >> a;
		if (a > 99 and a < 1000)
		{
			a3 = a % 10;
			a2 = (a / 10) % 10;
			a1 = a / 100;
			if (a1 > a2 and a2 > a3)
			{
				cout << "Цифры данного числа образуют убывающую последовательность" << "\n";
			}
			else if (a1 < a2 and a2 < a3)
			{
				cout << "Цифры данного числа образуют возрастающую последовательность" << "\n";
			}
			else
			{
				cout << "Высказывание 'Цифры данного числа образуют возрастающую или убывающую последовательность' ложно" << "\n";
			}
		}
		else {
			cout << "ошибка" << "\n";
		}
	}
	else if (n == 6)
	{
		int a, b, c;
		cout << "Введите сторону треугольника А: " << "\n";
		cin >> a;
		cout << "Введите сторону треугольника В: " << "\n";
		cin >> b;
		cout << "Введите сторону треугольника C: " << "\n";
		cin >> c;
		if ((a + b) > c and (a + c) > b and (b + c) > a)
		{
			if (a * a + b * b == c * c or a * a + c * c == b * b or c * c + b * b == a * a)
			{
				cout << "Треугольник АВС прямоугольный" << "\n";
			}
			else {
				cout<< "Треугольник АВС не прямоугольный" << "\n";
			}
		}
		else {
			cout << "Треугольника АВС не существует" << "\n";
		}
	}
	else if (n == 7)
	{
		int a, b, c;
		cout << "Введите сторону треугольника А: " << "\n";
		cin >> a;
		cout << "Введите сторону треугольника В: " << "\n";
		cin >> b;
		cout << "Введите сторону треугольника C: " << "\n";
		cin >> c;
		if ((a + b) > c and (a + c) > b and (b + c) > a)
		{
			cout << "Треугольник АВС существует" << "\n";
		}
		else {
			cout<< "Треугольника АВС не существует" << "\n";
		}
	}
	else if (n == 5)
	{
		int a, a1, a2, a3, a4;
		cout << "Введите четырехзначное число А: " << "\n";
		cin >> a;
		if (a > 999 and a < 10000)
		{
			a4 = a % 10;
			a3 = (a / 10) % 10;
			a2 = (a / 100) % 10;
			a1 = a / 1000;
			if (a1 == a4 and a2 == a3)
			{
				cout << "Данное число читается одинаково слева направо и справа налево" << "\n";
			}
			else
			{
				cout << "Данное число не читается одинаково слева направо и справа налево" << "\n";
			}
		}
		else {
			cout << "ошибка" << "\n";
		}
	}
}
