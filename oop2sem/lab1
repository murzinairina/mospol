    if (num == 12)
    {
        system("cls");
        float f, p;
        cout << "Задание 12" << endl;
        cout << "Введите количество десятичных фунтов: ";
        cin >> f;
        p = f - (static_cast<int>(f));
        cout << "Эквивалентная сумма в старой форме записи: " << static_cast<int>(f) << "." << p * 20 << endl;
