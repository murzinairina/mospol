    if (num == 8)
    {
        system("cls");
        cout << "Задание 8" << endl;
        cout << setfill('.') << 1990 << setw(8) << 135 << endl << 1991 << setw(8) << 7290 << endl<< 1992 << setw(8) << 11300 << endl<< 1993 << setw(8) << 16200 << endl;
