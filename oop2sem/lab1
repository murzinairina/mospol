        cout << "Введите количество шиллингов: ";
        cin >> sh;
        cout << "Введите количество пенсов: ";
        cin >> p;
        cout << "Десятичных фунтов: "<<f<<"."<<static_cast<int>(((sh*12+p)/240)*100) << endl;
        cout << "\n" << "Введите номер задания: ";
        cin >> num;
    }
    if (num == 11)
    {
        system("cls");
        cout << "Задание 11" << endl;
        cout << setiosflags(ios::left) << setw(12) << "Фамилия" << setw(12) << "Имя" << setw(18) << "Адрес" << setw(12) << "Город" << endl 
            << "\n" << setfill(' ') << setw(12) << "Петров" << setw(12) << "Василий" << setw(18) << "Кленовая 16" << setw(12) << "Санкт-Петербург" << endl
            << setw(12) << "Иванов" << setw(12) << "Сергей" << setw(18) << "Осиновая 3" << setw(12) << "Находка" << endl
            << setw(12) << "Сидоров" << setw(12) << "Иван" << setw(18) << "Березовая 21" << setw(12) << "Калининград" << endl;
