    if (num == 5)
    {
        system("cls");
        cout << "Задание 5" << endl;
        char a;
        cout << "Введите строчную или заглавную букву: ";
        cin >> a;
        cout << islower(a)<<endl;
        cout << "\n" << "Введите номер задания: ";
        cin >> num;
    }
    if (num == 6)
    {
        system("cls");
        cout << "Задание 6" << endl;
        float Dol;
        cout << "Введите денежную сумму в долларах: ";
        cin >> Dol;
        cout << "$" << Dol << " = " << Dol / 1.487 << " фунт." << endl;
        cout << "$" << Dol << " = " << Dol / 0.172 << " франк." << endl;
        cout << "$" << Dol << " = " << Dol / 0.584 << " нем. мар." << endl;
        cout << "$" << Dol << " = " << Dol / 0.00955 << " яп. йен." << endl;
        cout << "\n" << "Введите номер задания: ";
        cin >> num;
